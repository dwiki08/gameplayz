<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="8dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="12dp"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/img_banner"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@color/primaryLight"
            android:contentDescription="@string/game_poster"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ic_platform_windows"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/platform_windows"
            android:src="@drawable/ic_platform_windows"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_banner"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/ic_platform_xbox"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/platform_windows"
            android:src="@drawable/ic_platform_xbox"
            app:layout_constraintStart_toEndOf="@id/ic_platform_windows"
            app:layout_constraintTop_toBottomOf="@id/img_banner"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/ic_platform_playstation"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/platform_windows"
            android:src="@drawable/ic_platform_playstation"
            app:layout_constraintStart_toEndOf="@id/ic_platform_xbox"
            app:layout_constraintTop_toBottomOf="@id/img_banner" />

        <ImageView
            android:id="@+id/ic_platform_nintendo"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/platform_windows"
            android:src="@drawable/ic_platform_nintendo"
            app:layout_constraintStart_toEndOf="@id/ic_platform_playstation"
            app:layout_constraintTop_toBottomOf="@id/img_banner"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/ic_platform_mac_os"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/platform_windows"
            android:src="@drawable/ic_platform_macos"
            app:layout_constraintStart_toEndOf="@id/ic_platform_nintendo"
            app:layout_constraintTop_toBottomOf="@id/img_banner" />

        <TextView
            android:id="@+id/tv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:textColor="@color/accentColor"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/tv_rating_top"
            app:layout_constraintTop_toBottomOf="@id/img_banner"
            tools:text="4.5" />

        <TextView
            android:id="@+id/tv_rating_top"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:gravity="bottom"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/tv_rating"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_banner"
            tools:text="/ 5" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="34dp"
            android:layout_marginBottom="16dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_banner"
            tools:text="Grand Theft Auto V" />

        <TextView
            android:id="@+id/label_release_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/label_release_date"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintStart_toStartOf="@id/tv_title"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />

        <TextView
            android:id="@+id/tv_release_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="end"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/label_release_date"
            app:layout_constraintTop_toTopOf="@id/label_release_date"
            tools:text="12 February 2022" />

        <TextView
            android:id="@+id/label_genres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_genres"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintStart_toStartOf="@id/tv_title"
            app:layout_constraintTop_toBottomOf="@id/tv_release_date" />

        <TextView
            android:id="@+id/tv_genres"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:gravity="end"
            android:maxLines="1"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/label_genres"
            app:layout_constraintTop_toTopOf="@id/label_genres"
            tools:text="Action, Shooter, Adventure" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
